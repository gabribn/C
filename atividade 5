#include <stdio.h>
#include <stdlib.h>

struct Horario {
    int ano, mes, dia, hora, min;
};
typedef struct Horario horario;

struct cadastro {
    char placa[7];
    char modelo[10];
    char cor[10];
    struct horario entrada;
    struct horario saida;
    char status[1];
};
typedef struct cadastro pessoa;

